@model IList<BowlingScoringEngine.Models.Frame>

<h2>Your Score!</h2>

<div class="row">

    @for (int i = 0; i < Model.Count - 1; i++)
    {
        <div>
            @{
                var frameCount = i + 1;
                <em>Frame: @frameCount</em><br />
                @Html.DisplayFor(m => Model[i].FirstScore)
                @Html.DisplayFor(m => Model[i].SecondScore)
            }
            <br /><br />
            <strong>Total:</strong> @Html.DisplayFor(m => Model[i].Total)
        </div>
    }
    @Html.BeginForm()
    {
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Reset" class="btn btn-default" />
        </div>
    </div>
    }

</div>

